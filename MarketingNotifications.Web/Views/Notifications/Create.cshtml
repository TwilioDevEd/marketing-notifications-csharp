@model MarketingNotifications.Web.ViewModels.NotificationViewModel

<h1>SMS Notifications</h1>
<p>Use this form to send MMS notifications to any subscribers.</p>

@using (Html.BeginForm("Create", "Notifications"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Message)
        @Html.TextBoxFor(m => m.Message, new { @class = "form-control", placeholder = "New things are happening!" })
        @Html.ValidationMessageFor(x => x.Message, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ImageUrl)
        @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control", placeholder = "http://fake.twilio.com/some_image.png" })
    </div>
    <button type="submit" class="btn btn-primary">Send Message</button>
}